* {
  box-sizing: border-box;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
}

body, input, select, textarea, button {
  font: 13px "Helvetica Neue", Helvetica, sans-serif;
  line-height: 18px;
}

a {
  text-decoration: none;

  &:hover: {
    text-decoration: underline;
  }
}

.octicon {
  text-align: center;
}

.octicon-git-pull-request { color: pull-request-color; }
.octicon-issue-opened { color: issue-opened-color; }
.octicon-git-commit { color: git-commit-color; }

.nowrap {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

time {
  font-weight: 200;
  color: #bbbbbf;
  font-size: 0.85em;
}

.obscure-links {
  a {
    color: inherit;
    text-decoration: none;
    border-bottom: 1px dotted rgba(#000,0.2);
  }
}

.pane {
  & > header {
    padding: 0 18px;
    line-height: header-height;
    border-bottom: 1px solid border-color;
    color: base-color;
    background-color: header-color;

    & > * {
      vertical-align: middle;
      display: table-cell;
      white-space: nowrap;
    }

    .mega-octicon {
      vertical-align: center;
    }

    nav {
      a {
        text-decoration: none;
        color: inherit;
      }
    }

    .actions {
      text-align: right;
    }

    .actions, .responsive-toggle {
      width: 1%; // make it as small as possible since it is display:table-cell
    }

    @media only screen and (max-width: 768px) {
      padding-left: 0;

      .responsive-toggle {
        padding: 0 18px;
      }
    }
  }

  @media screen and (max-width: 768px) {
    box-shadow: -1px 0 5px rgba(#000, 0.2);
  }
}
