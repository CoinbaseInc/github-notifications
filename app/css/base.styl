* {
  box-sizing: border-box;
}

body {
  font-size: 13px;
  line-height: 18px;
  font-family: "Helvetica Neue", Helvetica, sans-serif;
}

.octicon {
  text-align: center;
}

.octicon-git-pull-request { color: pull-request-color; }
.octicon-issue-opened { color: issue-opened-color; }
.octicon-git-commit { color: git-commit-color; }

.nowrap {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.pane {
  & > header {
    background-color: header-color;
    padding: 16px 18px;
    line-height: 18px;
    box-shadow: 0 0 1px #000, 0 0 5px rgba(#000, 0.5),
      inset 1px 0 0 0 rgba(#fff, 0.1), inset -1px 0 0 0 rgba(#000, 0.1);
    color: #fff;

    nav {
      a {
        text-decoration: none;
        color: inherit;
      }
    }

    .actions {
      float: right;
      display: inline-block;
    }
  }
}
