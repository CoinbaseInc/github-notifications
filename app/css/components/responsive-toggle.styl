@media screen and (min-width: 768px) {
  .responsive-toggle { display: none; }
}

@media screen and (max-width: 767px) {
  $toggle-percent = 80%;

  input.responsive-toggle {
    position: absolute;
    top: -9999px;
    left: -9999px;
  }

  .responsive-content {
    transition: transform 250ms ease;
  }

  .responsive-toggle:checked ~ .responsive-content {
    transform: translateX($toggle-percent);
  }
}
