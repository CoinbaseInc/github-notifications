.segmented-control {
  display: inline-block;

  input {
    visibility: hidden;
    position: absolute;
    left: -5000px;
  }

  label {
    @extend .button;
    border-radius: 16px;
    height: auto;
    line-height: 24px;
    margin-top: -8px;
    padding: 0 18px;
  }

  // Selected
  input:checked + label {
    background-color: rgba(#000, 0.15);
    color: #fff;
  }
}

