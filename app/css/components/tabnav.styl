.tabnav {
  background: #f7f7f7;
  padding: 4px 9px 0 9px;
  border-radius: 3px 3px 0 0;
  border-bottom: 1px solid #e3e3e3;
  margin-bottom: 15px;
}

.tabnav-tabs {
  display: inline-block;
  margin: 0;
  padding: 0;

  li {
    display: inline-block;
    margin-bottom: -1px;
  }
}

.tabnav-tab {
  display: inline-block;
  padding: 6px 12px;
  border: 1px solid transparent;
  border-bottom: 0;
  font-size: 14px;
  color: #666;
  text-decoration: none;
  border-radius: 3px 3px 0 0;

  .write-selected &.write-tab, .preview-selected &.preview-tab {
    border-color: #ddd;
    background-color: #fff;
    color: #333;
  }
}

.write-bucket { display: none; }

.write-selected {
  .write-bucket { display: block; }
  .preview-bucket { display: none; }
}
