  position: absolute;
  overflow: hidden;
  top: 0;
  bottom: 0;

  .content {
    overflow: auto;
    position: absolute;
    top: 48px;
    left: 0;
    right: 0;
    bottom: 0;
  }

  & > header {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    height: 48px;
  }
}

