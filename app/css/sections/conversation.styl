@keyframes fadein {
  from { opacity: 0; }
  to   { opacity: 1; }
}

.conversation-comment {
  animation: fadein 0.3s;
  background: #fff;
  overflow: hidden;

  a {
    text-decoration: none;
  }

  @media only screen and (min-width: 768px) {
    margin: 9px;
    border-radius: 2px;
    box-shadow: 0 0 2px rgba(#000, 0.2);
  }

  @media only screen and (max-width: 767px) {
    border-bottom: 1px solid #f1f1f1;
  }

  &.collapsed {
    .conversation-content { display: none; }
  }
}

.conversation-user {
  font-weight: bold;
  color: inherit;
}

.conversation-avatar {
  width: 24px;
  height: 24px;
  position: absolute;
  left: 6px;
  top: 50%;
  margin-top: -12px;
  border-radius: 2px;
}

.conversation-meta, .conversation-content {
  padding: 0 9px 0 36px;
}

.conversation-meta {
  line-height: 36px;
  vertical-align: middle;
  position: relative;
  cursor: pointer;

  time {
    float: right;
    color: #818189;
    font-size: 0.9em;
  }

  a {
    color: inherit;
  }
}

.conversation-content {
  margin-top: 9px;
}

.conversation-banner {
  overflow: hidden;
  padding: 6px 6px 6px 36px;

  .conversation-state {
    float: left;
    margin-right: 9px;
  }

  .conversation-banner-meta {
    float: right;
    margin-left: 18px;

    a {
      font-weight: bold;
      color: inherit;
    }
  }

  .conversation-summary {
    margin: 0;
  }
}

.state-indicator {
  display: inline-block;
  height: 20px;
  padding: 0 5px;
  color: #fff;
  border-radius: 2px;

  &.open { background-color: #6cc644; }
  &.closed { background-color: #bd2c00; }
}

.write-content {
  padding: 9px;

  textarea {
    width: 100%;
    font-size: 14px;
    border: 1px solid #ccc;
    border-radius: 2px
  }
}

.error-message {
  font-weight: bold;
  padding: 4px 8px;
  color: #900;
  border: 1px solid #ECC;
  background: #FFEAEA;
  border-radius: 2px;
  margin-bottom: 9px;
  display: none;

  .error & { display: block; }
}
