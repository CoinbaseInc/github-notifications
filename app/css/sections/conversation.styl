@keyframes fadein {
  from { opacity: 0; }
  to   { opacity: 1; }
}

.conversation-item {
  animation: fadein 0.3s;

  @media only screen and (min-width: 768px) {
    margin: 9px;
  }

  .author {
    color: inherit;
    text-decoration: none;
    font-weight: bold;
  }
}

.conversation-comment {
  background: #fff;
  overflow: hidden;
  border: 1px solid transparent;

  &:focus {
    outline: none;
  }

  &.selected {
    border: 1px solid #51a7e8;
    box-shadow: inset 0 1px 2px rgba(0,0,0,.075), 0 0 3px rgba(81,167,232,.5);
  }

  a {
    text-decoration: none;
  }

  @media only screen and (min-width: 768px) {
    border-radius: 2px;
    box-shadow: 0 0 2px rgba(#000, 0.2);
  }

  @media only screen and (max-width: 767px) {
    border-bottom: 1px solid #f1f1f1;
  }

  &.collapsed {
    .conversation-content { display: none; }
  }
}

.conversation-meta {
  padding: 0 18px 0 36px;
  line-height: 36px;
  vertical-align: middle;
  position: relative;
  cursor: pointer;

  time {
    float: right;
    color: #818189;
    font-size: 0.9em;
  }
}

.conversation-content {
  padding: 9px 18px 18px 36px;
}

.conversation-banner {
  overflow: hidden;
  padding: 6px 18px 6px 36px;

  .conversation-state {
    float: left;
    margin-right: 9px;
  }

  .conversation-banner-meta {
    float: right;
    margin-left: 18px;

    a {
      font-weight: bold;
      color: inherit;
    }
  }

  .conversation-summary {
    margin: 0;
  }
}

.conversation-meta {
  .avatar {
    margin-left: -30px;
    top: 4px;
  }
}

.conversation-item {
  .avatar {
    width: 24px;
    height: 24px;
    float: left;
    vertical-align: middle;
    position: relative;
    border-radius: 2px;
    margin-right: 5px;
    margin-top: 2px;
  }
}

.conversation-event {
  margin: 24px 0 24px 45px;
  color: #666;

  .avatar {
    width: 16px;
    height: 16px;
  }
}

.conversation-event-hidden {
  display: none;
}

.conversation-item-icon {
  float: left;
  width: 30px;
  height: 30px;
  margin-top: -7px;
  margin-right: 7px;
  line-height: 30px;
  color: #666666;
  text-align: center;
  background-color: #f3f3f3;
  border-radius: 50%;

  .conversation-event-merged & {
    color: #fff;
    background-color: git-merge-color;
  }

  .conversation-event-closed & {
    color: #fff;
    background-color: issue-closed-color;
  }

  .conversation-event-reopened & {
    color: #fff;
    background-color: issue-opened-color;
  }
}

.state-indicator {
  display: inline-block;
  height: 20px;
  padding: 0 5px;
  color: #fff;
  border-radius: 2px;

  &.open { background-color: #6cc644; }
  &.closed { background-color: #bd2c00; }
}

.write-content {
  padding: 9px 9px 9px 36px;
}

.error-message {
  font-weight: bold;
  padding: 4px 8px;
  color: #900;
  border: 1px solid #ECC;
  background: #FFEAEA;
  border-radius: 2px;
  margin-bottom: 9px;
  display: none;

  .error & { display: block; }
}

.git-ref {
  position: relative;
  // height: 20px;
  display: inline-block;
  padding: 0 5px;
  border-radius: 3px;
  font: 10px/20px Monaco, "Liberation Mono", Courier, monospace;
  color: #336479;
  white-space: nowrap;
  vertical-align: middle;
  background-color: #e8f0f8;
}

.git-sha {
  color: #000;
  font-weight: bold;
  font-family: Consolas, "Liberation Mono", Courier, monospace;
  font-size: 12px;
}
