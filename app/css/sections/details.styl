#details {
  background-color: #f7f7f7;

  header {
    a {
      text-decoration: none;
      color: inherit;
    }
  }

  h1 {
    @extend .nowrap;
    font-size: 16px;
    margin: 0 90px 0 0;
    padding: 0;
    font-weight: normal;
  }

  nav {
    position: absolute;
    top: 0;
    right: 0;
  }

  .octicon-mute:hover {
    color: brand-red;
  }

  .octicon-unmute {
    color: brand-red;
    &:hover { color: brand-green; }
  }

  .octicon-star {
    &.starred, &:hover {
      color: brand-yellow;
      text-shadow: 0px 0px 1px darken(brand-yellow, 40%);
    }
  }
}

.notification-type-octicon {
  width: 22px;
  display: inline-block;
  color: inherit !important;
  opacity: 0.6;
}
