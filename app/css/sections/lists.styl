sidebar-color = #151D22;

#lists {
  background-color: sidebar-color;
  color: #eee;
  font-size: 12px;
  box-shadow: inset -1px 0 0 #000, inset -2px 0 0 #333, 1px 0 2px rgba(#000, .25);
  -webkit-font-smoothing: antialiased;

  @media screen and (max-width: 767px) {
    width: toggle-percent;
  }

  header {
    padding-left: 18px;
  }

  h1 {
    background: url(../img/mark.png) no-repeat center center;
    background-size: 100%;
    text-indent: -9999px;
    overflow: hidden;
    width: 182px;
    height: 18px;
  }

  ul {
    margin: 18px 0;
  }

  .list {
    a {
      opacity: 0.5;
      color: #fff;
      padding: 0 18px;
      line-height: 26px;
      transition: color .2s ease;
      text-shadow: 0 1px 1px rgba(#000, 0.5);

      &.selected {
        opacity: 1;
        background: rgba(#fff, 0.075);
        box-shadow: inset 2px 0 0 0 rgba(brand-blue, 0.65);
      }
    }
  }

  .primary {
    display: block;
    font-size: 12px;
    margin-bottom: 18px;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    font-weight: 500;

    a {
      line-height: 36px;
    }

    .octicon {
      margin-right: 4px;
    }
  }

  .title {
    opacity: 0.25;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 12px;
    line-height: 34px;
    padding: 0 18px;
    margin: 18px 0 0 0;
  }
}

.list-name {
  @extend .nowrap;
  max-width: 80%;
  display: block;
  float: left;
}

.list-unread-count {
  float: right;
  background: rgba(#000, 0.3);
  width: 2.5em;
  text-align: center;
  border-radius: 20px;
  line-height: 18px;
  margin-top: 4px;
  opacity: 0.7;
}

#send-feedback {
  display: block;
  text-align: center;
  color: rgba(#fff, 0.6);
  font-weight: bold;
  text-decoration: none;
  box-shadow: inset 0 0 1px lighten(sidebar-color, 15%), 0 0 1px rgba(#000, 0.2);
  margin: 20px;
  padding: 10px;
  border-radius: 2px;
  background-color: lighten(sidebar-color, 10%);
  color: #fff;
  opacity: 0.5;

  &:hover {
    opacity: 1;
  }
}
