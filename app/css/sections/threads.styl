@keyframes slideIn {
  from {
    opacity: 0;
    transform: scale(0.8) translateX(-100%);
  }
}

#threads {
  background: #fff;

  .content {
    border-right: 1px solid #d9d9d9
  }

  .notification {
    animation: slideIn 0.2s ease-in;

    position: relative;
    box-shadow: inset 0 1px 0 #ede8ea, 0 1px 0 #ede8ea;
    transition: background .2s ease;

    &:hover {
      background-color: desaturate(lighten(header-color, 95%), 50%);
    }

    &.selected {
      background-color: desaturate(lighten(header-color, 85%), 50%);
    }

    a {
      padding: 15px 15px 15px 34px;
    }

    .octicon {
      position: absolute;
      left: 12px;
    }
  }

  .repository {
    color: #818189;
    font-size: 0.9em;
  }

  .repository {
    float: left;
    clear: both;
  }

  time {
    float: right;
  }

  .title {
    display: block;
    font-size: 14px;
    line-height: 16px;
    @extend .nowrap;
  }

  .unread {
    .title {
      font-weight: bold;
    }
  }
  .read {
    color: #818189;
  }
}
